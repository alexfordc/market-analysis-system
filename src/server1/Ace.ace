system mas
	-- Primary test application

root

	MA_SERVER: "make"

default

	assertion (all);
	debug ("editing");
	debug ("persist");
	debug ("command line");
	profile (no);

	--precompiled ("$EIFFEL4/precomp/spec/$PLATFORM/base");

